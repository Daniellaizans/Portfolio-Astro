---
import LinkInline from "./LinkInline.astro";

interface Props {
  title: string;
  company: string;
  description: string;
  link?: string;
  date: string;
}

const { title, company, description, link, date } = Astro.props;
---

<div
  class="experience-card relative p-6 rounded-xl border border-white/10 bg-gray-900/40 backdrop-blur-sm transition-all duration-500 hover:border-[#DAD91A]/50 hover:bg-gray-900/60 hover:scale-[1.02] group opacity-0 translate-y-8 flex flex-col items-center text-center z-10"
>
  <div class="flex flex-col items-center gap-2 mb-4">
    <div>
      <h3
        class="text-xl font-bold text-[#DAD91A] group-hover:text-[#ebeb33] transition-colors"
      >
        {title}
      </h3>
      <h4 class="font-semibold text-lg text-white/90">{company}</h4>
    </div>
    <time
      class="text-sm font-mono text-white/60 bg-white/5 px-3 py-1 rounded-full whitespace-nowrap border border-white/5"
    >
      {date}
    </time>
  </div>

  <div
    class="relative flex flex-col gap-2 pb-2 text-gray-300 w-full text-center text-pretty"
  >
    {description}
  </div>

  {
    link && (
      <div class="mt-4 pt-4 border-t border-white/5 flex justify-center w-full">
        <LinkInline href={link}>
          Saber m√°s{" "}
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="w-5 icon icon-tabler icon-tabler-chevron-right group-hover:translate-x-1 transition-transform"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            stroke-width="2"
            stroke="currentColor"
            fill="none"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <>
              <path stroke="none" d="M0 0h24v24H0z" fill="none" />
              <path d="M9 6l6 6l-6 6" />
            </>
          </svg>
        </LinkInline>
      </div>
    )
  }
</div>
